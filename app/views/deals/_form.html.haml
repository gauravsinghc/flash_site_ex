.deal_form
  = simple_form_for @deal do |f|
    = flash["alert"]  
    .form-group
      = f.input :title
    .form-group
      = f.label :description
      = f.text_field :description
    .form-group
      = f.input :price
    .form-group
      = f.input :discounted_price
    .form-group
      = f.input :quantity 
    .form-group
      = f.input :publish_date
    %br  
    .form-group
      = f.input :image , as: :file         
    %br
    .form-actions
      = f.button :submit, class: "btn btn-primary btn-block btn-lg"
